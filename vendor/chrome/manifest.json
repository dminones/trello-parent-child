{
  "manifest_version": 2,
  "name": "Parent/Child Managment for Trello",
  "description": "Add support of Parent/Child dependencies in Trello projects.",
  "author": "Handsome",
  "homepage_url": "http://labs.handsome.is/trello/",
  "version": "0.6.8",
  "icons": {
    "16": "icons/icon_16.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://trello.com/*",
        "https://notify.bugsnag.com/*"
      ],
      "css": [
        "css/style.css"
      ],
      "js": [
        "js/libs/jquery.js",
        "js/libs/jquery-ui.js",
        "js/libs/bugsnag.js",
        "js/bugsnag-config.js",
        "js/config.js",
        "js/api.js",
        "js/plugins/inheritance.js",
        "js/init.js"
      ]
    }
  ]
}
